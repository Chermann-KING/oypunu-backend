## Variables Core (OBLIGATOIRES pour production.config.ts)
# JWT Configuration - CRITIQUES pour sécurité
JWT_SECRET=your_secure_jwt_secret_here_minimum_32_characters_with_complexity
JWT_REFRESH_SECRET=your_different_refresh_secret_32_chars_minimum
JWT_EXPIRATION=1d

# Chiffrement - CRITIQUE pour données sensibles
ENCRYPTION_MASTER_KEY=your_encryption_master_key_32_chars_minimum_complex

# MongoDB (utilisez votre URI MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# URLs de l'application - CRITIQUES pour CORS
APP_URL=http://localhost:3000
FRONTEND_URL=http://localhost:4200

# Session - CRITIQUE pour sécurité
SESSION_SECRET=your_session_secret_32_chars_minimum

# Port
PORT=3000

# Environnement
NODE_ENV=development

# Cookie domain pour sessions sécurisées
COOKIE_DOMAIN=localhost

## Variables Email (OPTIONNELLES - pour les fonctionnalités email)
# Configuration Email Gmail
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_SECURE=false
MAIL_USER=your_email@gmail.com
MAIL_PASSWORD=your_app_specific_password
MAIL_FROM=your_email@gmail.com

## Variables OAuth Sociales (OPTIONNELLES - désactivées par défaut)
# Google OAuth (laissez vides pour désactiver)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Facebook OAuth (laissez vides pour désactiver)
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# Twitter OAuth (laissez vides pour désactiver)
TWITTER_CONSUMER_KEY=
TWITTER_CONSUMER_SECRET=

## Variables Cloudinary (OPTIONNELLES - pour upload d'images)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

## Variables Monitoring (OPTIONNELLES - recommandées pour production)
# Sentry pour error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# APM pour performance monitoring
APM_SERVER_URL=https://your-apm-server.com
APM_SECRET_TOKEN=your_apm_secret_token

# Redis pour cache (recommandé pour performance)
REDIS_URL=redis://localhost:6379

# Logging level
LOG_LEVEL=info

# Version de l'application
APP_VERSION=1.0.0